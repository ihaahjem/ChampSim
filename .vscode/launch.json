  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch (lldb)",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceRoot}/bin/champsim",
          "args": [
              "--warmup_instructions",
              "2000000",
              "--simulation_instructions",
              "5000000",
              "../traces/ipc1_public/spec_gcc_001.champsimtrace.xz"
          ],
          "stopAtEntry": false,
          "cwd": "${workspaceRoot}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "lldb",
          "setupCommands": [
              {
                  "description": "Enable lldb pretty printing",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": false
              }
          ],
          "preLaunchTask": "build"
      }
  ]
}